<div class="img-hover img-hover-zoom--brightness">
  <img class="card-img-top" src=<%= asset_path(@product.image_url)%> >
</div>
<li><%=@product.id%></li>
<li><%=@product.title%></li>
<li><%=@product.description%></li>
<li><%=@product.image_url%></li>
<li><%=@product.price%></li>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "Back", :back %></li>
</ul>
